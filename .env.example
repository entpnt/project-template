# Project Configuration
PROJECT_NAME=project

# Required Environment Variables
SECRET_KEY=your-secure-secret-key-here     # Used for Flask session encryption
API_KEY=your-secure-api-key-here           # API authentication key

# Optional Environment Variables (with defaults)
FLASK_ENV=development                      # development or production
APP_PORT=5000                              # Port for the Flask application

# MongoDB Configuration
MONGO_URI=mongodb://mongodb:27017/app
MONGO_DBNAME=app
MONGO_USER=app_user                        # MongoDB username
MONGO_PASSWORD=app_pass                    # MongoDB password
MONGO_PORT=27017                           # MongoDB port

# Example values (DO NOT USE IN PRODUCTION):
# SECRET_KEY=example-secret-key-12345
# API_KEY=example-api-key-12345
# MONGO_PASSWORD=example-db-password

# Note: In production, use strong, randomly generated values for all secrets
# You can generate secure keys using:
# python -c 'import secrets; print(secrets.token_urlsafe(32))'

# API Configuration
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=*

# Admin Users (comma-separated list of user IDs)
ADMIN_USERS=

# OAuth 2.0 Configuration
OAUTH_CLIENT_ID=default_client_id
OAUTH_CLIENT_SECRET=default_client_secret
OAUTH_REDIRECT_URI=http://localhost:5000/auth/callback

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days

# Server settings
PORT=5000
HOST=0.0.0.0 

# AI Provider Settings
ANTHROPIC_API_KEY=ANTHROPIC_API_KEY
OPENAI_API_KEY=OPENAI_API_KEY

# Langfuse Settings
LANGFUSE_PUBLIC_KEY=LANGFUSE_PUBLIC_KEY
LANGFUSE_SECRET_KEY=LANGFUSE_SECRET_KEY
LANGFUSE_HOST=LANGFUSE_HOST